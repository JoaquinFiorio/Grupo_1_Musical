<%- include('./partials/head') %>

    <body>
        <section class="login">
            <div class="container">
                <div class="rowLeft">
                    <div class="buttons">
                        <button class="loginButton">
                            Iniciar Sesión
                        </button>
                        <a href="register">
                            <button class="registerButton">
                                Regístrate
                            </button>
                        </a>
                    </div>
                    <div class="socialMedia">
                        <a href="https://www.facebook.com" target="_blank" class="circle facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://www.google.com" target="_blank" class="circle google">
                            <i class="fab fa-google"></i>
                        </a>
                    </div>
                    <form action="/users/login" method="post" id="login_form">
                        <input type="email" name="email" id="email" placeholder="Correo Electrónico">
                        <input type="password" name="password" id="password" placeholder="Contraseña">
                        <div class="forgotPassword">
                            <a>¿Olvidaste tu contraseña?</a>
                        </div>
                        <input type="submit" value="Ingresar">
                    </form>
                </div>
                <div class="rowRight">
                    <img width="100%" src="/img/login/imgLogin.jpg" alt="">
                </div>
            </div>
        </section>
        <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
        <script src="/js/loginValidator.js"></script>
    </body>

    </html>