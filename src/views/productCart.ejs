<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <header>
        <nav class="navBar">
            <a class="headerImg" href="/">
                <img src="/img/logo.png" alt="logo">
            </a>
            <div class="search-container">
                <input type="text" class="search-input" placeholder="Buscar productos marcas y más">
                <i class="fas fa-search search-icon"></i>
            </div>
            <div class="rightOptions">
                <a href="/login" class="options">
                    <i class="fa-solid fa-circle-user"></i>
                    <h5>Iniciar Sesión</h5>
                </a>
                <a href="/register" class="options">
                    <i class="fa-solid fa-pen-to-square"></i>
                    <h5>Regístrate</h5>
                </a>
                <a href="/productCart" class="options productCart">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <h5>Carrito 0</h5>
                </a>
            </div>
            <div class="hamburgerMenu">
                <i class="fa-solid fa-bars"></i>
            </div>
        </nav>
        <div class="navProducts">
            <button>Inst. Cuerda <i class="fa-solid fa-chevron-down"></i></button>
            <button>Inst. Viento <i class="fa-solid fa-chevron-down"></i></button>
            <button>Percusión <i class="fa-solid fa-chevron-down"></i></button>
            <button>Teclado y Piano <i class="fa-solid fa-chevron-down"></i></button>
            <button>Accesorios <i class="fa-solid fa-chevron-down"></i></button>
        </div>
    </header>

    <section class="productCart">
        <div class="wrapper">
            <h1 class="title-cart">Carrito</h1>
            <div class="project">
                <div class="shop">
                    <div class="box">
                        <img class="bateria" src="/img/products/bateria.jpg">
                        <div class="content">
                            <h3>Bateria Electrica</h3>
                            <h4>Precio $120000</h4>
                            <p class="unit">Cantidad <input name="" value="0"></p>
                            <p class="btn-area"><i aria-hidden="true" class="fa fa-trash"></i></p>
                        </div>
                    </div>
                    <div class="box">
                        <img src="/img/products/guitarra-electrica.jpg">
                        <div class="content">
                            <h3>Guitarra electrica</h3>
                            <h4>Precio $40500</h4>
                            <p class="unit">Cantidad <input name="" value="0"></p>
                            <p class="btn-area"><i aria-hidden="true" class="fa fa-trash"></i></p>
                        </div>
                    </div>
                    <div class="box">
                        <img src="/img/products/bajo.jpg">
                        <div class="content">
                            <h3>Bajo</h3>
                            <h4>Precio $25000</h4>
                            <p class="unit">Cantidad <input name="" value="0"></p>
                            <p class="btn-area"><i aria-hidden="true" class="fa fa-trash"></i></p>
                        </div>
                    </div>
                </div>
                <div class="right-bar">
                    <p><span>Subtotal</span></p>
                    <hr>
                    <p><span>Envio</span></p>
                    <hr>
                    <p><span>Total</span></p>
                    <a href="/"><i class="fa fa-shopping-cart"></i>Realizar compra</a>
                </div>
            </div>
        </div>
    </section>
    <%- include('./partials/footer') %>
</body>

</html>