<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="product-uploader">
                    <% products.forEach(product=> { %>
                        <div class="product">
                            <p>Producto <%= product.id %>
                            </p>
                            <a href="/productEdit/<%= product.id %>">
                                <div class="container-img">
                                <% if (product.Images && product.Images.length > 0) { %>
                                    <img src="<%= product.Images[0].name %>" alt="imagen-producto" />
                                <% } else { %>
                                    <p>No hay im√°genes disponibles</p>
                                <% } %>
                                </div>
                                <p>
                                    <%= product.name %>
                                </p>
                                <p>
                                    <%= product.description %>
                                </p>
                                <p>
                                    <% if (product.Categories && product.Categories.length > 0) { %>
                                        <span><%= product.Categories[0].name %></span>
                                    <% } %>
                                </p>
                                <p>
                                    <% if (product.Categories && product.Categories.length > 1) { %>
                                        <% product.Categories.slice(1).forEach(category => { %>
                                            <span> <%= category.name %> </span>
                                        <% }); %>
                                    <% } %>
                                </p>
                                <p>
                                    U$S <%= product.price %>
                                </p>
                            </a>
                        </div>
                        <% }) %>
                </section>
                <a href="/productUploader"><button>Cargar producto</button></a>
            </main>
            <%- include('./partials/footer') %>
    </body>

    </html>